<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    android:layout_height="match_parent"
    android:background="@drawable/roundlayout"

    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:text="0"
        android:id="@+id/etShowNumber"
        android:background="@color/colorGray"
        android:textColor="@color/colorWhite"
        android:textSize="70sp"
        android:gravity="right"
        android:inputType="textPersonName"
        android:ems="10"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <Button
                android:id="@+id/button1"
                android:layout_weight="1"
                android:background="@color/colorGrayButton"
                android:layout_height="70dp"
                android:onClick="buClean"
                android:text="AC"
                android:layout_width="wrap_content"/>
            <Button
                android:id="@+id/buttonPlusMinues"
                android:onClick="buNumberEvent"
                android:layout_weight="1"
                android:background="@color/colorGrayButton"
                android:layout_height="70dp"
                android:text="+/-"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/button3"
                android:onClick="buPercentEvent"
                android:text="%"
                android:background="@color/colorGrayButton"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:text="/"
                android:id="@+id/buDiv"
                android:onClick="buOpEevent"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWhite"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <Button
                android:layout_weight="1"
                android:id="@+id/bu7"
                android:onClick="buNumberEvent"
                android:background="@color/colorGrayButton"
                android:text="7"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:text="8"
                android:onClick="buNumberEvent"
                android:id="@+id/bu8"
                android:background="@color/colorGrayButton"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:id="@+id/bu9"
                android:onClick="buNumberEvent"
                android:layout_weight="1"
                android:text="9"
                android:background="@color/colorGrayButton"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:text="*"
                android:id="@+id/buMul"
                android:onClick="buOpEevent"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWhite"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <Button
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:id="@+id/bu4"
                android:background="@color/colorGrayButton"
                android:text="4"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/bu5"
                android:onClick="buNumberEvent"
                android:background="@color/colorGrayButton"
                android:text="5"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:text="6"
                android:onClick="buNumberEvent"
                android:background="@color/colorGrayButton"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:id="@+id/buSub"
                android:onClick="buOpEevent"
                android:layout_weight="1"
                android:text="-"
                android:textColor="@color/colorWhite"
                android:background="@color/colorOrange"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <Button
                android:layout_weight="1"
                android:id="@+id/bu1"
                android:onClick="buNumberEvent"
                android:background="@color/colorGrayButton"
                android:text="1"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/bu2"
                android:onClick="buNumberEvent"
                android:background="@color/colorGrayButton"
                android:text="2"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:id="@+id/bu3"
                android:text="3"
                android:background="@color/colorGrayButton"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/buSum"
                android:onClick="buOpEevent"
                android:text="+"
                android:textColor="@color/colorWhite"
                android:background="@color/colorOrange"
                android:layout_height="70dp"
                android:layout_width="wrap_content"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/bu0"
            android:onClick="buNumberEvent"
            android:background="@color/colorGrayButton"
            android:layout_width="178dp"
            android:layout_height="70dp"
            android:textSize="25sp"
            android:text="0"/>
        <Button
            android:layout_weight="1"
            android:background="@color/colorGrayButton"
            android:id="@+id/buDot"
            android:onClick="buNumberEvent"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="25sp"
            android:text="."/>
        <Button
            android:layout_weight="1"
            android:id="@+id/buEqua"
            android:onClick="buEqual"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorOrange"
            android:textSize="25sp"
            android:text="="/>
    </LinearLayout>


</LinearLayout>